<div class="movie_info">
  <h1><%= @title %></h1>
  <img src="<%=@image_url%>" alt="">

  <div class="tagline">
    <p>"<%= @tagline %>"</p>
  </div>

  <div class="overview">
    <h3>Overview</h3>
    <p><%=@overview %></p>
  </div>

  <div class="release">
    <h3>Release Date</h3>
    <p><%=@formatted_date %></p>
  </div>


<div class="rating">
    <h3>Runtime</h3>
    <p><%= @runtime%> minutes</p>
  </div>

  <div class="rating">
    <h3>Average Rating</h3>
    <p><%= @avg_rating.round(2)%></p>
  </div>

  <!-- Add the form for adding the movie to the watchlist -->
  <form action="/add_to_watchlist" method="post">
    <input type="hidden" name="title" value="<%= @title %>">
    <input type="hidden" name="image_url" value="<%= @image_url_sm %>">
    <button type="submit" class="add_btn">Add to Watchlist</button>
  </form>
</div>
