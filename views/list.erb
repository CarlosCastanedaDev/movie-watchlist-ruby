<div class="movie_info">
<h1><%= @title%></h1>
<img src="<%=@image_url%>" alt="">

<div class="overview">
<h3>Overview</h3>
<p><%=@overview %></p>
</div>

<div class="release">
<h3>Release Date</h3>
<p><%=@release_date %></p>
</div>

<div class="rating">
<h3>Average Rating</h3>
<p><%= @avg_rating%></p>
</div>

<form action="/add_to_watchlist/<%=@id %>/<%=@title %>" method="post">
 <input type="hidden" name="_method" value="post">
<div class="btn">
<button>Add to Watchlist</button>
</div>
</form>

</div>
<div class="home">
<p><a href="/">Search for another movie</a></p>
</div>
